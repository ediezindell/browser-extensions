{
  "manifest_version": 3,
  "name": "縦書きビューア",
  "version": "4.2",
  "permissions": ["contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "縦書きビューアを起動"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
